//CURRENCY COUNTER
#include<stdio.h>
int main(){
    int N,x,y,z,p,q,r,s,t;
    printf("ENTER DIGIT = ");
    scanf("%d",&N);
    x=N/500 ;
    N=N%500 ;
    y=N/100 ;
    N=N%100 ;
    z=N/50 ;
    N=N%50 ;
    p=N/20 ;
    N=N%20 ;
    q=N/10 ;
    N=N%10 ;
    r=N/5 ;
    N=N%5 ;
    s=N/2 ;
    N=N%2 ;
    t=N/1 ;
    N=N%1 ;
    printf("500 notes -> %d\n100 notes -> %d\n50 notes -> %d\n20 notes -> %d\n10 notes -> %d\n5 notes -> %d\n2 notes -> %d\n1 notes -> %d",x,y,z,p,q,r,s,t);



    return 0;
}
