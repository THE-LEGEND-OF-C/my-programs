//STRING OPERATIONS
#include<stdio.h>
#include<string.h>
int main(){
    char str1[100] ;
    char str2[100] ;
    printf("ENTER STRING 1 = ") ;
    fgets(str1,sizeof(str1),stdin) ;
    printf("\nENTER STRING 2 = ") ;
    fgets(str2,sizeof(str2),stdin) ;
    str1[strcspn(str1,"\n")]='\0' ;
    str2[strcspn(str2,"\n")]='\0' ;
    int x= strlen(str1) ;
    int y=strlen(str2) ;
    printf("\nLENGTH OF STRING 1 = %d\nLENGTH OF STRING 2 = %d",x,y);
    char temp[100] ;
    strcpy(temp,str1);
    strcat(str1,str2) ;
    printf("\nAFTER CONCATENATION = %s",str1) ;
    int a = strcmp(temp,str2) ;
    if(a==0)
        printf("\nBOTH STRINGS ARE EQUAL");
    else
        printf("\nBOTH STRINGS ARE NOT EQUAL");







    return 0;
}
