//SUM OF DIGITS
#include<stdio.h>
int main(){
    int x,sum;
    printf("Enter Digit = ");
    scanf("%i",&x);
    sum=0;
    if(x !=0){
        while(x !=0){
        sum=sum+x%10 ;
        x=x/10 ;


        }
    }
    else{
        printf("INVALID NUMBER");
    }
    printf("Sum = %i",sum);


    return 0;
}


