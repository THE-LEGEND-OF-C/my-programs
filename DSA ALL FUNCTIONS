//DSA ALL FUNCTIONS
#include<stdio.h>
#include<stdlib.h>
#define MAX 100
int list[MAX];
int n=0;
void insertInBeg(int value){
    if (n==MAX){
    printf("List is full!!!\n \n");
    return;
    }
    for(int i=n-1; i>=0; i--){
        list[i+1]=list[i];
    }
    list[0]=value;
    n++;
    printf("Element inserted!!!\n \n");
}
void insertAtEnd(int value){
    if(n==MAX){
        printf("List is full!!!\n \n");
    return;
    }
    list[n++]=value;
    printf("Element inserted!!!\n \n");
}
void insertAtPos(int pos, int value){
    if(pos>=n)
    printf("Position is invalid!!!\n");
    else{
        for(int i=n-1; i>=pos; i--){
            list[i+1]=list[i];
        }
        list[pos]=value;
        n++;
        printf("Element Inserted!!!\n \n");
    }
}
void deleteFromBeg(){
    if(n==0){
        printf("list is empty!!!\n");
        return;
    }
    for(int i=0; i<n-1; i++){
        list[i]=list[i+1];
    }
    n--;
    printf("Element deleted!!!\n");
}
void deleteFromEnd(){
    if(n==0){
        printf ("list is empty!!!\n");
        return;
    }
    n--;
    printf("Element deleted!!!\n");
}
void deleteFromPos(int pos){
    if(n==0){
        printf ("list is empty!!!\n");
        return;
    }
    else if(pos<0||pos>=n)
    printf("Position is invalid!!!\n");
    else{
        for(int i=pos; i<n-1; i++){
            list[i]=list[i+1];
        }
        n--;
        printf("Element Deleted!!!\n");
    }
}
void displaylist(){
    if (n==0){
        printf("List is empty!!!\n");
        return;
    }
    for(int i=0; i<n; i++){
        printf("%d\t", list[i]);
    }
    printf("\n");
}
int search(int value){
    for(int i=0; i<n; i++){
        if(list[i] == value)
        return i;
    }
    return -1;
}
void UpdateList(int pos, int value){
    if(pos<0||pos>=n)
        printf("Position is invalid!!!\n");
        else{
            list[pos] = value;
            printf("Element Updated\n");
        }
}
void bubbleSort(){
    if(n==0){
        printf ("list is empty!!!\n");
        return;
    }
    for(int i=0; i<n-1; i++){
        for(int j=0; j<n-i-1; j++){
            if(list[j]>list[j+1]){
                int temp=list[j];
                list[j]=list[j+1];
                list[j+1]=temp;
            }
        }
    }
    printf("Element sorted !!!\n");
}
int main(){
    while(1){
        printf("1. Insert in beginning\n");
        printf("2. Insert at end\n");
        printf("3. Insert at any position\n");
        printf("4. Delete from beginning\n");
        printf("5. Delete from End\n");
        printf("6. Delete from given position\n");
        printf("7. Display list\n");
        printf("8. Search Element in list\n");
        printf("9. Update element in list\n");
        printf("10. Sort elements in list\n");
        printf("11. Exit \n");
        int choice, data, pos;
        printf("Enter choice: ");
        scanf("%d", &choice);
        switch (choice){
        case 1:
            printf("Enter data: ");
            scanf("%d", &data);
            insertInBeg(data);
            break;
        case 2:
            printf("Enter data: ");
            scanf("%d", &data);
            insertAtEnd(data);
            break;
        case 3:
            printf("Enter position: ");
            scanf("%d", &pos);
            printf("Enter data: ");
            scanf("%d", &data);
            insertAtPos(pos, data);
            break;
        case 4:
            deleteFromBeg();
            break;
        case 5:
            deleteFromEnd();
            break;
        case 6:
            printf("Enter position: ");
            scanf("%d", &pos);
            deleteFromPos(pos);
            break;
        case 7:
            displaylist();
            break;
        case 8:
            printf("Enter the value to search: ");
            scanf("%d", &data);
            int index = search(data);
            if(index != -1)
                printf("Eleemnt found at index: %d\n", index);
            else
                printf("Element not found!!!\n");
            break;
        case 9:
            printf("Enter position: ");
            scanf("%d", &pos);
            printf("Enter new data: ");
            scanf("%d", &data);
            UpdateList(pos, data);
            break;
        case 10:
        bubbleSort();
            break;
        case 11:  
            break;
            exit(0);
        default:
        printf("Invalid choice !!!\n");
        }
    }
    return 0;
}
